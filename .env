# Project Configuration
# This file defines the structure and settings for the Consul on Kubernetes project

PROJECT_NAME=consul-k8s
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION="Production-like Consul deployment on Kubernetes"

# Directory Structure
CONFIG_DIR=config
SCRIPTS_DIR=scripts
MANIFESTS_DIR=manifests
DOCS_DIR=docs

# Consul Configuration
CONSUL_VERSION=1.21.2
CONSUL_NAMESPACE=consul
CONSUL_REPLICAS=3

# Ingress Configuration
CONSUL_DOMAIN=consul.local
PROMETHEUS_DOMAIN=prometheus.local
INGRESS_CLASS=nginx

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# Security
ACLS_ENABLED=true
CONNECT_ENABLED=true
TLS_ENABLED=true
